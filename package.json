{
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"prepare": "husky install"
	},
	"dependencies": {
		"next": "^12.3.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@types/node": "17.0.23",
		"@types/react": "^18.0.21",
		"@types/react-dom": "^18.0.6",
		"@typescript-eslint/eslint-plugin": "^5.16.0",
		"@typescript-eslint/parser": "^5.16.0",
		"eslint": "8.12.0",
		"eslint-config-next": "12.1.1",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-jsx-a11y": "^6.5.1",
		"eslint-plugin-prettier": "^4.0.0",
		"husky": "^8.0.1",
		"lint-staged": "^13.0.3",
		"prettier": "^2.7.1",
		"typescript": "^4.8.4"
	},
	"prettier": {
		"endOfLine": "auto",
		"useTabs": true,
		"printWidth": 80,
		"arrowParens": "always",
		"semi": true,
		"tabWidth": 2,
		"bracketSpacing": true,
		"jsxSingleQuote": false,
		"singleQuote": true,
		"trailingComma": "es5"
	},
	"eslintConfig": {
		"extends": [
			"next/core-web-vitals",
			"eslint:recommended",
			"plugin:jsx-a11y/recommended",
			"plugin:@typescript-eslint/recommended",
			"plugin:prettier/recommended"
		],
		"parser": "@typescript-eslint/parser",
		"env": {
			"node": true
		},
		"rules": {
			"prettier/prettier": "error",
			"camelcase": "error",
			"no-console": "error",
			"no-unused-vars": "warn",
			"no-unused-labels": "warn",
			"no-else-return": "warn",
			"no-alert": "error",
			"no-compare-neg-zero": "error",
			"no-caller": "error",
			"no-duplicate-imports": "error",
			"no-empty-function": "warn",
			"no-eval": "error",
			"no-new-func": "error",
			"no-this-before-super": "error"
		}
	},
	"lint-staged": {
		"*.ts(x)?": "eslint --ext .ts"
	}
}
